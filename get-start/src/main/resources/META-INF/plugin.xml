<idea-plugin>
  <id>org.dreamcat.ideatk.getstart</id>
  <name>Get-Start</name>
  <vendor email="support@dreamcat.org" url="https://dreamcat.org">Jerry Will</vendor>
  <description><![CDATA[
<strong>Demo Idea插件</strong><br/><br/>
目前支持的特性如下：
<ul>
  <li>A</li>
  <li>B</li>
  <li>C</li>
 </ul>
]]></description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>org.intellij.plugins.markdown</depends>
  <!-- 允许使用javafx作为UI -->
  <!-- <depends>com.intellij.javafx</depends> -->
  <depends optional="true" config-file="plugin-maven.xml">org.jetbrains.idea.maven</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!--<errorHandler implementation="org.dreamcat.ideatk.handler.SentryReportHandler"/>-->
    <!-- 运行配置 -->
    <configurationType implementation="org.dreamcat.ideatk.get_start.rc.ScriptRunConfigurationType"/>

    <!--  窗体填充面板  -->
    <toolWindow id="StockToolWindow" canCloseContents="true" anchor="bottom"
      factoryClass="org.dreamcat.ideatk.get_start.stock.StockToolWindowFactory"/>
    <!--  应用级单例  -->
    <applicationService serviceImplementation="org.dreamcat.ideatk.get_start.stock.StockDataState"/>
    <!--  idea 应用级设置(项目级 projectConfigurable) groupId：
          root、appearance、build、build.tools、tools、language、editor、project，other
    -->
    <applicationConfigurable groupId="tools" displayName="Stock Plugin"
      id="preference.StockSettingsConfigurable"
      instance="org.dreamcat.ideatk.get_start.stock.StockSettingsConfigurable"/>

    <!--  启动时执行  -->
    <postStartupActivity implementation="org.dreamcat.ideatk.get_start.handler.MyProjectActivity"/>

    <runLineMarkerContributor language=""
      implementationClass="org.dreamcat.ideatk.get_start.run_line_marker.MyRunLineMarkerContributor"/>
    <codeInsight.lineMarkerProvider language="JSON" implementationClass="org.dreamcat.ideatk.get_start.run_line_marker.MyLineMarkerProvider"/>

    <!--<postStartupActivity implementation="org.dreamcat.ideatk.get_start.tab_highlighter.TabHighlighterStartupActivity"/>-->
    <!--<editorTabColorProvider implementation="org.dreamcat.ideatk.get_start.tab_highlighter.TabHighlighterTabColorProvider"/>-->
    <!--<projectConfigurable groupId="tools" displayName="Active Tab Highlighter Plugin"-->
    <!--  id="preference.HighlighterSettingsConfigurable"-->
    <!--  instance="org.dreamcat.ideatk.get_start.tab_highlighter.TabHighlighterSettingsConfigurable"/>-->
    <!--<projectService serviceImplementation="org.dreamcat.ideatk.get_start.tab_highlighter.HighlighterSettingsConfig"/>-->
  </extensions>

  <actions>
    <action class="org.dreamcat.ideatk.get_start.action.MarkdownAction"
      id="org.dreamcat.ideatk.get_start.action.MarkdownAction"
      text="Run Markdown">
      <!-- 菜单 - Tools -->
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <!--  工具栏 - Run-->
      <add-to-group group-id="ToolbarRunGroup" anchor="first"/>
      <!-- 右键菜单 -->
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>

    <action class="org.dreamcat.ideatk.get_start.action.JsonAction"
      id="org.dreamcat.ideatk.get_start.action.JsonAction"
      use-shortcut-of="RunClass" text="Run Json"/>

    <action class="org.dreamcat.ideatk.get_start.action.JavaStringAction"
      id="org.dreamcat.ideatk.get_start.action.JavaStringAction"
      text="Java String Action">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>

    <group id="MyMenu" text="My Menu" popup="true">
      <!-- 主菜单-和Tools挨着 -->
      <add-to-group group-id="MainMenu" anchor="after" relative-to-action="ToolsMenu"/>
      <action class="org.dreamcat.ideatk.get_start.action.LoginAction"
        icon="AllIcons.General.Balloon" text="登入" popup="true"/>
      <action class="org.dreamcat.ideatk.get_start.action.DialogAction"
        id="org.dreamcat.ideatk.action.DialogAction"
        text="Dialog Action"
        icon="AllIcons.Toolwindows.WebToolWindow"
        popup="true"/>
      <separator/>
      <group id="MyAboutMenu" text="About Me" popup="true"
        icon="AllIcons.General.BalloonInformation"
        class="org.dreamcat.ideatk.get_start.action.AboutActionGroup"/>
    </group>
  </actions>

  <applicationListeners>
    <listener class="org.dreamcat.ideatk.get_start.handler.MyProjectListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    <listener class="org.dreamcat.ideatk.get_start.handler.MyAppLifecycleListener" topic="com.intellij.ide.AppLifecycleListener"/>
    <listener class="org.dreamcat.ideatk.get_start.handler.MyPerformanceListener" topic="com.intellij.diagnostic.IdePerformanceListener"/>
  </applicationListeners>
</idea-plugin>